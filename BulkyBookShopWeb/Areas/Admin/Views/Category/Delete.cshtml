@model BulkyBookShop.Models.Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border border-secondary rounded bg-active p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary my-2">Delete Category</h2>
        <hr />
    </div>

@*    <div asp-validation-summary="All"> </div>  
*@
    <div class="mb-3">
        <label asp-for="Name" class="col-form-label mt-2"></label>
        <input asp-for="Name" disabled class="form-control"  />
        <span asp-validation-for="Name"  class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="col-form-label mt-2"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" />
        <span asp-validation-for="DisplayOrder"  class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger mt-4" style="width:165px">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-4" style="width:165px">
        Back To Categories
    </a>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}