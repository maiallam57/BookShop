@model BulkyBookShop.Models.Category

<form method="post" asp-action="Edit">
    <div class="border border-secondary rounded bg-active p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary my-2">Edit Category</h2>
        <hr />
    </div>

@*    <div asp-validation-summary="All"> </div>  
*@
    <div class="mb-3">
        <label asp-for="Name" class="col-form-label mt-2"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="col-form-label mt-2"></label>
        <input asp-for="DisplayOrder" class="form-control"  />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4" style="width:165px">Update</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-4" style="width:165px">
        Back To Categories
    </a>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}