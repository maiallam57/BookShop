@{
}

<form method="post">
<section class="pt-4">
    <div class="card my-4">
        <div class="card-header py-3 bg-primary text-white">
        <h5 class="mb-0">Shopping Cart</h5>
        </div>
        <div class="card-body mt-4">
            
        <div class="row mb-4 d-flex justify-content-between align-items-center">
            <div class="col-md-2 col-lg-2 col-xl-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img5.webp"
                    class="img-fluid rounded-3" alt="product Image">
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                <h4 class="text-primary mb-0"><strong>Cotton T-shirt</strong></h4>
                <h6 class="text-dark mb-0">--AUTHOR--</h6>
                <p class="text-secondary mb-0 ml-2">--Description--</p>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                    <button class="btn btn-primary"
                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                        </svg>
                    </button>

                <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" style="width:65px; margin-left:5px; margin-right:5px;" />

                    <button class="btn btn-primary"
                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                    </button>
            </div>
            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h6 class="py-2 mt-2 px-1 border rounded text-center">€ 44.00</h6>
            </div>
            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a asp-action="remove"  class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                    </svg>
                </a>
            </div>
        </div>
        <hr class="my-4" />
        </div>
    </div>
       
    <div class="card mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h5 class="mb-0">Summary</h5>
        </div>
        <div class="card-body mt-2">

            <ul class="list-group list-group-flush">
                <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Subtotal
                <span>$53.98</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping Fee
                <span>Gratis</span>
                </li>
                <li
                class="list-group-item d-flex justify-content-between align-items-center px-0 mb-4">
                <div>
                    <strong>Total (USD)</strong>
                </div>
                <span><strong>$53.98</strong></span>
                </li>
            </ul>

            <div class="card-footer">
                <div class="justify-content-between align-items-center">
                    <button  type="button" class="btn btn-secondary ml-4" style="width:200px;">Continue shopping</button>
                    <button  type="button" class="btn btn-primary offset-lg-8 offset-md-6" style="width:200px;">Checkout</button>
                </div>
			</div>

        </div>
        </div>
</section>
</form>
